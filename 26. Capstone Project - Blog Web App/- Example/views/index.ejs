<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <h1>All Posts</h1>
  <a href="/new">Create New Post</a>
  <ul>
    <% posts.forEach(post => { %>
      <li>
        <a href="/posts/<%= post.id %>"><%= post.title %></a>
        <form method="POST" action="/delete/<%= post.id %>" style="display:inline">
          <button>Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
